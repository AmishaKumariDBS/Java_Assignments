<?xml version="1.0" encoding="UTF-8"?>  
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  
               
 <bean id="studentbean" class="com.training.Student">
 <property name="name" value="Shawn"></property>
 <property name="address" value="LA"></property>
 <property name="numCourses" value="3"></property>
 <property name="courses">
 <list>
 <value>Singing</value>
 <value>Dancing</value>
  <value>Acting</value>
 </list>
 </property>
 <property name="grades">
 <list>
 <value>100</value>
 <value>90</value>
  <value>50</value>
 </list>
 </property>
 </bean> 
 
 <bean id="teacherbean" class="com.training.Teacher">
 <property name="name" value="Kendall"></property>
 <property name="address" value="Mars"></property>
 <property name="numCourses" value="1"></property>
 <property name="courses">
 <list>
 <value>Modeling</value>
 </list>
 </property>
 </bean>              
</beans>